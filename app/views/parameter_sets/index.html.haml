%h1 Welcome to your little slice of heav^H^H^H^HFUN!

- @parameter_sets.each do |pset|
  %hr
  .row-fluid
    .span1
      .well{:style => 'background-color: white; border-style: none;'}
        - if !disable_vote?(pset)
          -#%voteup= link_to(image_tag('up_arrow.png'), vote_up_parameter_set_path(pset), {method: 'put', 'data-id' => pset.id})
          %voteup= link_to(image_tag('up_arrow.png'), '#', {method: 'put', 'data-id' => pset.id})
          -#%votedown= link_to(image_tag('down_arrow.png'), vote_down_parameter_set_path(pset), {method: 'put'})
          %votedown= link_to(image_tag('down_arrow.png'), '#', {method: 'put', 'data-id' => pset.id})
    .span6
      .span3
        %strong{style: 'font-size: 16px;'}= link_to pset.name, pset
      .span4{style: 'font-size: 12px'}= pset.description
    .span3
      = pset.user.email

= link_to t('.new', default: t('helpers.links.new')), new_parameter_set_path, class: 'btn btn-primary'

=form_for @parameter_set do |f|
  -if @parameter_set.errors.any?
    #error_explanation
      %h2="#{pluralize(@parameter_set.errors.count, "error")} prohibited this parameter set from being saved:"

      %ul
      -@parameter_set.errors.full_messages.each do |msg|
        %li=msg

  .field
    =f.label :name
    %br
    =f.text_field :name
  .field
    =f.label :description
    %br
    =f.text_area :description
  .field
    =f.label :brackets
    %br
    =f.text_area :brackets
  .actions
    =f.submit
!!!HTML

%head
  %title Dwarf Fortress World Generation Settings Home
  = stylesheet_link_tag :application, :media => :all
  = javascript_include_tag 'application'
  = csrf_meta_tags

%body
  =render 'layouts/navbar'

  .container-fluid
    .row-fluid
      .span9
        -if alert
          %p.alert.alert-info= alert
        -if notice
          %p.notice= notice
        = yield
      .span3
        =render 'layouts/sidebar' if controller_name == 'ParameterSetsController'
